<%= simple_form_for(@standard_poll_option_set) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <fieldset>
    <% i = 1 %>
    <%= f.fields_for :standard_poll_options do |builder| %>
       <%= render 'option_fields', f: builder, i: i %>
      <% i = i + 1 %>
    <% end %>
    </fieldset>
 
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
